<%= form_with model: @plan, local: true, 
              class: 'ls-form ls-form-horizontal' do | form |%>
  <div class="ls-modal-body" id="myModalBody">
    <fieldset>
      <label class="ls-label col-md-4 col-xs-12">
        <%= form.label :name %>
        <%= form.text_field :name %>
      </label>
      <label class="ls-label col-md-4 col-xs-12">
        <%= form.label :description %>
        <%= form.text_area :description, rows: "1" %>
      </label>
      <label class="ls-label col-md-4">
        <%= form.label :product_type_id, class: 'ls-label-text' %>
        <div class="ls-custom-select">
          <%= form.collection_select :product_type_id, @products, :id, :name, class: 'ls-custom' %>
        </div>
      </label>
      <label class="ls-label col-md-4 col-xs-12">
        <%= form.label :details %>
        <%= form.text_area :details, rows: "1" %>
      </label>
      <label class="ls-label col-md-7">
          <%= form.label :status %>
        <label class="ls-label-text" style="margin-top: 9px;">
          <%= form.radio_button(:status, 'activated') %>
          <%= t('.status.activated') %>
        </label>
        <label class="ls-label-text" style="margin-top: 9px;">
          <%= form.radio_button(:status, 'disabled') %>
          <%= t('.status.disabled') %>
        </label>
      </label>
    </fieldset> 
  </div>
  <div class="ls-modal-footer">
    <%= form.submit class: 'ls-btn-primary' %>
  </div>
<% end %>