<%= form_with model: @price, local: true, 
              class: 'ls-form ls-form-horizontal' do | form |%>
  <div class="ls-modal-body" id="myModalBody">
    <fieldset>
      <label class="ls-label col-md-4 col-xs-12">
        <%= form.label :plan_price %>
        <%= form.number_field :plan_price, step: 0.1 %>
      </label>
      <label class="ls-label col-md-4">
        <%= form.label :plan, class: 'ls-label-text' %>
        <div class="ls-custom-select">
          <%= form.collection_select :plan_id, @plans, :id, :name, class: 'ls-custom' %>
        </div>
      </label>
      <label class="ls-label col-md-4">
        <%= form.label :periodicity, class: 'ls-label-text' %>
        <div class="ls-custom-select">
          <%= form.collection_select :periodicity_id, @periodicities, :id, :name, class: 'ls-custom' %>
        </div>
      </label>
    </fieldset> 
  </div>
  <div class="ls-modal-footer">
    <%= form.submit class: 'ls-btn-primary' %>
  </div>
<% end %>